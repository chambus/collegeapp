<% if user_signed_in? %>

<form class="d-flex col-3 float-end" role="search">
        
        <%= search_form_for @q do |f| %>
         
         <%= f.search_field :first_name_cont ,class:"form-control me-2", placeholder:"Search" %>
        <%= f.submit class:"btn btn-outline-success" %>
         <% end %>
        
      </form>
   
<h1>Student Records</h1>
<div class="table-responsive-xl">
<table class="table table-striped table table-sm table table-bordered table-primary table table-hover">
  <thead class="table-dark">
    <tr>
      <th>Full Name</th>
     
      <th>Gender</th>
      <th>DOB</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>Class</th>
      <th>Combination</th>
      <th>Parent/Guardian</th>
      <th>Religion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    
  <% @students.each do |student| %>
   <tr>
     <td>
      <%= link_to student.first_name+' '+student.last_name, student, class:"text-decoration-none" %></td>
    
     <td><%=student.gender%></td>
     <td><%=student.dob%></td>
     <td><%=student.phone%></td>
     <td><%=student.address%></td>
     <td><%=student.form%></td>
     <td><%=student.combination%></td>
     <td><%=student.parent_guardian%></td>
     <td><%=student.religion%></td>
     
     
     <td>
      <%= link_to "Delete", student_path(student), data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-outline-danger btn-sm"  %>
     </td>
   </tr>
    
  <% end %>

  </tbody>
 
</table>
  

</div>
 

